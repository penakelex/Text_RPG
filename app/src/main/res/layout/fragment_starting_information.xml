<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context="penakelex.textRPG.homeland.StartingFragments.StartingInformationFragment">

    <TextView
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/main_information"
        android:textColor="#474747"
        android:textSize="36sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="@string/ur_name"
                android:textColor="#474747"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/characterName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/input_name"
                android:inputType="textPersonName"
                android:textColor="#032FCC"
                android:textSize="24sp" />

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="@string/ur_sex"
                android:textColor="#474747"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/selectingSex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/male"
                        android:textColor="#474747"
                        android:textSize="28sp" />

                    <RadioButton
                        android:id="@+id/female"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/female"
                        android:textColor="#474747"
                        android:textSize="28sp" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="@string/ur_age"
                android:textColor="#474747"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/characterAge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/input_age"
                android:inputType="number"
                android:textColor="#0204C3"
                android:textSize="24sp" />

            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="@string/ur_height"
                android:textColor="#474747"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/characterHeight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/input_height"
                android:inputType="number"
                android:textColor="#032FCC"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="#FF0000"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:visibility="invisible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextToCharacteristics"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:text="@string/next_to_characteristics"
            android:textAllCaps="false"
            android:layout_gravity="bottom"
            android:textColor="#474747"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>