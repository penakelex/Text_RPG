<resources>
    <style name="Theme.TextRPG" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_5</item>
        <item name="colorPrimaryVariant">@color/purple_7</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal_7</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.TextRPG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TextRPG.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="gameFont">
        <item name="android:fontFamily">@font/game_font1</item>
    </style>

    <style name="Theme.TextRPG.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>